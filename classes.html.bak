    <style>
        :root {
            --primary-dark: #1a365d;
            --primary-light: #ffffff;
            --accent-blue: #0f42ec;
            --accent-yellow: #fae404;
            --neutral-gray: #718096;
            --neutral-light: #f7fafc;
            --light-blue: #e6f3ff;
            --light-yellow: #fffbeb;
        }
        
        body {
            font-family: 'Inter', sans-serif;
            color: var(--primary-dark);
            background-color: var(--primary-light);
        }
        
        .text-gradient {
            background: linear-gradient(135deg, var(--accent-yellow) 0%, var(--accent-blue) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--accent-blue) 0%, var(--accent-yellow) 100%);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 25px rgba(34, 84, 61, 0.3);
        }
        
        .class-card {
            transition: all 0.3s ease;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }
        
        .class-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 20px 40px rgba(45, 55, 72, 0.15);
        }
        
        .nav-blur {
            background: rgba(250, 250, 250, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(45, 55, 72, 0.1);
        }
        
        .fade-in {
            opacity: 0;
            transform: translateY(30px);
        }
        
        .fade-in.visible {
            opacity: 1;
            transform: translateY(0);
            transition: all 0.6s ease;
        }
        
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background: #e2e8f0;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .calendar-day {
            background: white;
            padding: 12px 8px;
            min-height: 80px;
            cursor: pointer;
            transition: all 0.2s ease;
            position: relative;
        }
        
        .calendar-day:hover {
            background: #f7fafc;
        }
        
        .calendar-day.has-class {
            background: #e6fffa;
        }
        
        .calendar-day.has-class:hover {
            background: #b2f5ea;
        }
        
        .class-dot {
            width: 8px;
            height: 8px;
            border-radius: 50%;
            position: absolute;
            bottom: 8px;
            right: 8px;
        }
        
        .class-dot.beginner { background: #48bb78; }
        .class-dot.intermediate { background: #4299e1; }
        .class-dot.advanced { background: #ed8936; }
        
        .community-gallery {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 2rem;
        }
        
        .image-overlay {
            background: linear-gradient(135deg, rgba(34, 84, 61, 0.8) 0%, rgba(44, 82, 130, 0.8) 100%);
        }
    </style>
</head>
